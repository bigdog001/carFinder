<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/desktop_notificaition" android:layout_width="92dip"
	android:layout_height="110dip" android:gravity="center" android:orientation="vertical">
		<FrameLayout android:layout_width="fill_parent"
			android:gravity="center" android:layout_height="wrap_content">
			<ImageView android:id="@+id/desktop_shortcut_notice_icon"
                       android:layout_gravity="center"
			           android:layout_width="wrap_content"
				       android:layout_height="wrap_content"
                       android:paddingBottom="3dip" />
			<LinearLayout android:id="@+id/desktop_news_count_bg" android:layout_gravity="center_horizontal|top"  android:focusable="false"
			android:layout_marginLeft="20dip"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/desktop_notice_bg"
				android:visibility="invisible" android:gravity="center">
				<TextSwitcher android:id="@+id/desktop_news_count"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textAppearance="@style/desktop_counter" />
			</LinearLayout>
		</FrameLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:visibility="gone"
                  android:gravity="center"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:id="@+id/record_statu_layout"
                  android:orientation="horizontal">
        <ImageView android:layout_width="6dp"
                   android:layout_height="2dp"
                   android:id="@+id/record_status_0"
                   android:background="#000000"
                   android:layout_marginRight="8dp"
                   android:layout_weight="1"/>
        <ImageView android:layout_width="6dp"
                   android:layout_height="2dp"
                   android:id="@+id/record_status_1"
                   android:background="#000000"
                   android:layout_marginRight="8dp"
                   android:layout_weight="1"/>
        <ImageView android:layout_width="6dp"
                   android:layout_height="2dp"
                   android:id="@+id/record_status_2"
                   android:background="#000000"
                   android:layout_marginRight="8dp"
                   android:layout_weight="1"/>
        <ImageView android:layout_width="6dp"
                   android:layout_height="2dp"
                   android:id="@+id/record_status_3"
                   android:background="#000000"
                   android:layout_weight="1"/>
    </LinearLayout>
		<TextView android:id="@+id/desktop_shortcut_notice_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textAppearance="@style/desktop_name" android:gravity="center" android:textSize="16sp"/>
</LinearLayout>